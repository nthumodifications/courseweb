{
  "name": "@courseweb/api",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy src/index.ts",
    "gentype": "bunx supabase gen types typescript --project-id \"cmzdlrqfpuktcczvsobs\" --schema public > src/types/supabase.ts",
    "db:generate": "bunx prisma generate --schema ./src/prisma/schema.prisma",
    "prisma:generate": "bunx prisma generate --schema ./src/prisma/schema.prisma",
    "prisma:migrate": "bunx prisma migrate diff --schema ./src/prisma/schema.prisma",
    "prisma:migration:create": "wrangler d1 migrations create data-d1 update_schema",
    "prisma:migration:generate": "bun run generateMigration.js",
    "prisma:migration:apply:local": "wrangler d1 migrations apply data-d1 --local",
    "prisma:migration:apply:remote": "wrangler d1 migrations apply data-d1 --remote",
    "wrangler:types": "bunx wrangler types",
    "build": "tsc --outDir dist --skipLibCheck --noEmitOnError false --allowJs --noImplicitReturns false --noUnusedLocals false --noUnusedParameters false",
    "clean": "rm -rf dist",
    "lint": "echo 'API lint check'",
    "test": "echo 'API tests'"
  },
  "dependencies": {
    "@algolia/requester-fetch": "^5.37.0",
    "@cloudflare/workers-types": "^4.20250414.0",
    "@courseweb/shared": "*",
    "@courseweb/database": "*",
    "@hono/zod-validator": "^0.7.2",
    "@prisma/adapter-d1": "^6.6.0",
    "@prisma/client": "^6.6.0",
    "@supabase/supabase-js": "^2.49.1",
    "@tsndr/cloudflare-worker-jwt": "^3.1.3",
    "@types/bun": "^1.2.4",
    "algoliasearch": "^5.37.0",
    "bun-types": "^1.2.4",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "hono": "^4.7.2",
    "linkedom": "^0.18.9",
    "node-html-parser": "^7.0.1",
    "prisma": "^6.6.0",
    "rxdb": "^16.9.0",
    "uuid": "^12.0.0",
    "wrangler": "^4.10.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@courseweb/eslint-config": "*",
    "@types/node": "^24.3.1",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2"
  },
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
