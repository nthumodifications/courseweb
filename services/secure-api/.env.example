# NTHUMods Secure API Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/nthumods_secure_api"

# Firebase Configuration
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# API Configuration
NODE_ENV="development"  # development | production | test
PORT=3000

# Security Configuration (Production Only)
# Uncomment and configure for production deployment
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100
# API_KEY_ENCRYPTION_SECRET="your-32-character-secret-key-here"
# SESSION_SECRET="your-session-secret-here"

# OAuth Configuration (NTHU)
OAUTH_CLIENT_ID="your-nthu-oauth-client-id"
OAUTH_CLIENT_SECRET="your-nthu-oauth-client-secret"
OAUTH_REDIRECT_URI="https://your-domain.com/auth/callback"

# Monitoring & Logging (Production)
# LOG_LEVEL="info"  # error | warn | info | debug
# SECURITY_LOG_ENABLED=true
# AUDIT_LOG_RETENTION_DAYS=90

# ⚠️ SECURITY WARNINGS:
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate secrets regularly (recommended: every 90 days)
# 4. Use environment-specific configurations
# 5. Enable encryption for all sensitive data in production
