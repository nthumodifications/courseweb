{
  "name": "@courseweb/data-sync",
  "version": "1.0.0",
  "description": "Course data synchronization tools",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "dev": "bun src/index.ts --watch",
    "clean": "rm -rf dist",
    "sync:once": "bun src/sync-courses.ts",
    "sync:scheduled": "bun src/update-courses.ts",
    "docker:build": "docker build -t courseweb-data-sync .",
    "docker:run": "docker run --env-file .env courseweb-data-sync",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "courseweb",
    "data-sync",
    "scraping",
    "cron"
  ],
  "author": "NTHUMods Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "algoliasearch": "^4.24.0",
    "bun": "^1.3.4",
    "linkedom": "^0.18.4",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@courseweb/eslint-config": "*",
    "@types/node": "^20.0.0",
    "@types/node-schedule": "^2.1.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "@courseweb/eslint-config"
    ]
  }
}
