{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "VITE_SUPABASE_URL",
        "VITE_SUPABASE_ANON_KEY",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "VITE_ALGOLIA_APP_ID",
        "VITE_ALGOLIA_SEARCH_KEY",
        "VITE_COURSEWEB_API_URL",
        "VITE_NTHUMODS_AUTH_URL",
        "VITE_AUTH_CLIENT_ID",
        "VITE_NTHUMODS_AUTH_REDIRECT",
        "VITE_NTHUMODS_AUTH_SILENT_REDIRECT",
        "VITE_TURNSTILE_SITE_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    }
  }
}
