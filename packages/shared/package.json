{
  "name": "@courseweb/shared",
  "version": "0.0.0",
  "private": true,
  "description": "Shared utilities, types, and configurations for CoursWeb applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.0.1",
    "zod": "^4.3.6",
    "uuid": "^13.0.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@courseweb/eslint-config": "*",
    "@types/node": "^25.0.10",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.39.2",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "extends": [
      "@courseweb/eslint-config"
    ]
  }
}
